@import 'nib'
@import url(http://fonts.googleapis.com/css?family=Oxygen:400,700)

///////////////////
// Sticky Footer //
///////////////////
$footer_height = 60px

html, body
  height 100%
  padding 0
  margin 0

#push, #footer
  height $footer_height

#wrap
  min-height 100%
  margin 0 auto -1*$footer_height auto

//responsive fix
@media (max-width 767px)
  #footer
    margin-left -20px
    margin-right -20px
    padding-left 20px
    padding-right 20px

///////////////////
// Basic Styles  //
///////////////////

body
  font-family: 'Oxygen', sans-serif

.ajax_loader
  position relative
  margin 50px auto

.right
  float right

.left
  float left

.clear
  clear both

.btn-combined-left
  border-top-right-radius 0 !important
  border-bottom-right-radius 0 !important

.btn-combined-right
  border-top-left-radius 0 !important
  border-bottom-left-radius 0 !important
  border-left 0

////////////////////
// Header Styles  //
////////////////////

header
  padding 0 10rem 0 2rem
  border-bottom 0.1rem solid black
  height 4rem
  vertical-align middle
  margin-top 1rem
  .icon-edit
    margin-left 2rem
    line-height 3rem
  input
    line-height 2rem !important
    height 2rem !important

.button-nav
  margin 0
  padding 0.5rem
  font-size 1rem
  height 2rem
  line-height 2rem

input.title
  border 0
  font-size 2rem
  line-height 2rem
  height 2rem
  width 25rem

////////////////////
// Footer Styles  //
////////////////////

